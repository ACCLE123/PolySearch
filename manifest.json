{
  "manifest_version": 3,
  "name": "PolySearch: Market Assistant",
  "version": "1.5",
  "description": "Smart prediction market assistant powered by on-chain data.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://gamma-api.polymarket.com/*",
    "https://clob.polymarket.com/*",
    "https://data-api.polymarket.com/*",
    "https://polygon-rpc.com/*",
    "https://rpc-mainnet.maticvigil.com/*",
    "https://polygon.llamarpc.com/*",
    "https://1rpc.io/matic/*",
    "*://*.google.com/*",
    "*://*.google.com.hk/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search*",
        "*://*.google.com.hk/search*"
      ],
      "js": [
        "src/content/detector.js", 
        "src/core/storage.js", 
        "src/content/injector.js", 
        "src/content/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/styles/glass.css"],
      "matches": ["*://*.google.com/*", "*://*.google.com.hk/*"]
    }
  ]
}
