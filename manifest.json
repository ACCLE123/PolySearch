{
  "manifest_version": 3,
  "name": "PolySearch: Market Assistant",
  "version": "1.4",
  "description": "Modularized prediction market assistant for hackers.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://gamma-api.polymarket.com/*",
    "https://clob.polymarket.com/*",
    "*://*.google.com/*",
    "*://*.google.com.hk/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search*",
        "*://*.google.com.hk/search*"
      ],
      "js": ["src/content/detector.js", "src/core/matcher.js", "src/content/injector.js", "src/content/index.js"]
    }
  ]
}
